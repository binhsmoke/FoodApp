<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.Client_Info_ChangePWD_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@color/cyan"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:layout_marginLeft="10dp"
            android:text="User name "
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvMyTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape_item_food"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Đơn hàng của tôi"
                android:textColor="@color/black"
                android:textSize="20sp" />



            <TextView
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape_item_food"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Đổi mật khẩu"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.13.4"
            android:textColor="@color/black"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAEMIN"
            android:fontFamily="@font/baemin"
            android:textColor="@color/lightcyan"
            android:textSize="22sp"/>

    </LinearLayout>

</LinearLayout>