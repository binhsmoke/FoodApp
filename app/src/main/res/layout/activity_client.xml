<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/antiflash"
    tools:context=".Activity.ClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:background="@color/cyan"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:text="User name "
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:background="@color/antiflash"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Đơn hàng của tôi"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Mời bạn mới, nhận 50k"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Quản lí thanh toán"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Ví Coupon"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Địa chỉ đã lưu"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Chia sẻ thông tin cá nhân"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Hỗ trợ"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:text="Điều khoản và điều kiện"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.13.4"
            android:textColor="@color/black"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAEMIN"
            android:fontFamily="@font/baemin"
            android:textColor="@color/lightcyan"
            android:textSize="22sp"/>

    </LinearLayout>

</LinearLayout>