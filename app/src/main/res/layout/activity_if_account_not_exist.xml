<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".Activity.IfAccountNotExistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgButtonBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:padding="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Mã OTP xác nhận"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Hãy điền OTP gồm 6 số vừa được gửi đến số"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:id="@+id/tvPhone"
            android:text="0906445217"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="60"
            android:textStyle="bold"
            android:textColor="@color/cyan"
            android:gravity="center"
            android:id="@+id/tvCount"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/llStart"
            >

            <EditText
                android:id="@+id/inputCode1"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@color/cyan"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"

                android:layout_marginRight="10dp"
                />

            <EditText
                android:id="@+id/inputCode2"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textCursorDrawable="@color/cyan"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/inputCode3"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textCursorDrawable="@color/cyan"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/inputCode4"
                android:layout_width="54dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textCursorDrawable="@color/cyan"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/inputCode5"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textCursorDrawable="@color/cyan"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/inputCode6"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:backgroundTint="@color/white"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textCursorDrawable="@color/cyan"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không nhận được mã? "
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại"
                android:textColor="@color/cyan"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>