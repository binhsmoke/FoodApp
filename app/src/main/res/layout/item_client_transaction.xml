<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:id="@+id/layout_client_transaction_item"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/client_transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã giao"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/client_transaction_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="19, Jun"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/client_transaction_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Good Chicken - Ga Ran Han Quoc - Phan Van Tri"
        android:layout_marginVertical="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/client_transaction_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.000 vnd"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/client_transaction_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="3 Mon"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_inputbox"
        android:text="Đặt lại"
        android:gravity="center"
        android:textColor="@color/cyan"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="4dp"
        android:layout_marginTop="8dp"/>




</LinearLayout>